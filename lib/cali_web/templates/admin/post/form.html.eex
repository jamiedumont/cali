<%= form_for @changeset, @action, fn f -> %>

  <div class="my-6">
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  </div>

  <div class="my-6">
    <%= label f, :slug %>
    <%= text_input f, :slug %>
    <%= error_tag f, :slug %>
  </div>

  <div class="my-6">
    <%= label f, :content %>
    <%= hidden_input f, :content %>
    <%= error_tag f, :content %>
  </div>

  <%= submit "Save" %>

<% end %>
